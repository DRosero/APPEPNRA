<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="Administrar Datos de Responsable"
        android:id="@+id/lblAdministrarDatosResponsables"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstResponsable"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnRegresar"
        android:layout_below="@+id/lblAdministrarDatosResponsables" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:id="@+id/btnRegresar"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lblAdministrarDatosResponsables"
        android:onClick="irRegresar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnNuevoPaciente"
        android:layout_below="@+id/lstResponsable"
        android:layout_alignEnd="@+id/lblAdministrarDatosResponsables"
        android:onClick="irNuevoResponsable"/>

</RelativeLayout>